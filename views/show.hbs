<h1 class='mb-1 restaurant-show-title'>{{{restaurant.name}}}</h1>
<div class='container'>
	<div class='row'>
		<div
			class='col-12 col-md-10 mx-auto d-flex flex-column justify-content-center align-items-center'
		>

			<p class='mb-1'>
				<span class='text-secondary'>
					<i class='fas fa-utensils pr-2'></i>
					類別：
				</span>
				{{{restaurant.category}}}
			</p>

			<p class='mb-1'>
				<span class='text-secondary'>
					<i class='fas fa-map-marker-alt pr-2'></i>
					地址：
				</span>
				{{{restaurant.location}}}
				<a
					href='{{restaurant.google_map}}'
					class='text-secondary'
					target='_blank'
				>
					<i class='fas fa-location-arrow pr-2 fa-xs'></i>
				</a>
			</p>

			<p class='mb-1'>
				<span class='text-secondary'>
					<i class='fas fa-mobile-alt pr-2'></i>
					電話：
				</span>
				{{{restaurant.phone}}}
			</p>

			<p class='mb-5'>
				{{{restaurant.description}}}
			</p>
			<img
				class='rounded mx-auto d-block mb-4 w-100'
				src='{{restaurant.image}}'
				alt='{{restaurant.image}}'
				style='max-width: 600px;'
			/>
			<div class='m-4'>
				<button type='button' class='btn btn-primary m-1'><a
						href='/'
						class='text-white'
					>返回</a></button>
				<button type='button' class='btn btn-primary m-1'><a
						href='/restaurants/{{restaurant._id}}/edit'
						class='text-white'
					>編輯</a></button>
				<form
					action='/restaurants/{{restaurant._id}}?_method=DELETE'
					method='POST'
					class='d-inline-flex'
				>
					<button type='submit' class='btn btn-danger m-1'>刪除</button>
				</form>
			</div>
		</div>
	</div>
</div>