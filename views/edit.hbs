<div class='container'>
	<h1 class='fs-1'>修改餐廳</h1>
	<form action='/restaurants/{{restaurant._id}}?_method=PUT' method='POST'>
		<div class='mb-3'>
			<label for='name' class='form-label'>中文名稱</label>
			<input
				type='text'
				class='form-control'
				id='name'
				name='name'
				value='{{restaurant.name}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='name_en' class='form-label'>英文名稱</label>
			<input
				type='text'
				class='form-control'
				id='name_en'
				name='name_en'
				value='{{restaurant.name_en}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='category' class='form-label'>類別</label>
			<input
				list='title'
				class='form-control'
				id='category'
				name='category'
				value='{{restaurant.category}}'
				required
			/>
			<datalist id='title'>
				<option>中東料理</option>
				<option>日本料理</option>
				<option>義式餐廳</option>
				<option>美式</option>
				<option>酒吧</option>
				<option>咖啡</option>
			</datalist>
		</div>
		<div class='mb-3'>
			<label for='image' class='form-label'>圖片連結</label>
			<input
				type='text'
				class='form-control'
				id='image'
				name='image'
				value='{{restaurant.image}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='location' class='form-label'>地址</label>
			<input
				type='text'
				class='form-control'
				id='location'
				name='location'
				value='{{restaurant.location}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='phone' class='form-label'>電話</label>
			<input
				type='text'
				class='form-control'
				id='phone'
				name='phone'
				value='{{restaurant.phone}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='google_map' class='form-label'>Google Map連結</label>
			<input
				type='text'
				class='form-control'
				id='google_map'
				name='google_map'
				value='{{restaurant.google_map}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='rating' class='form-label'>評分</label>
			<input
				type='text'
				class='form-control'
				id='rating'
				name='rating'
				min='0'
				max='5'
				value='{{restaurant.rating}}'
				required
			/>
		</div>
		<div class='mb-3'>
			<label for='description' class='form-label'>評論</label>
			<input
				type='text'
				class='form-control'
				id='description'
				name='description'
				value='{{restaurant.description}}'
				required
			/>
		</div>
		<div>
			<button type='button' class='btn btn-primary m-1'><a
					href='/'
					class='text-white'
				>返回</a></button>
			<button type='submit' class='btn btn-primary'>送出</button>
		</div>
	</form>
	<form
		action='/restaurants/{{restaurant._id}}?_method=DELETE'
		method='POST'
		class='d-inline'
	>
		<button type='submit' class='btn btn-danger m-1'>刪除</button>
	</form>
</div>