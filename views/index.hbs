<!-- search bar -->
<div class='container search-bar'>
	<div class='search-bar-outer'>
		<div class='search-bar-inner'>
			<form action='/search'>
				<h4 class='mb-2'><label for='searchRestaurant'>尋找餐廳：</label></h4>
				<div class='input-group'>
					<input
						id='searchRestaurant'
						type='text'
						name='keyword'
						class='form-control'
						autocomplete='off'
						placeholder='輸入餐廳、分類'
						aria-label='Restaurant Name...'
						value='{{keyword}}'
						aria-describedby='search-button'
					/>
					<div class='input-group-append'>
						<button class='btn btn-major' type='submit' id='search-button'><i
								class='fas fa-search'
							></i></button>
					</div>
					<a
						href='/restaurants/new'
						class='btn btn-primary text-white ml-3'
					>新增</a>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
	<div class='row'>
		<div class='col-md-10 col-12 mx-auto'>
			<div class='card-columns m-1'>
				{{#each restaurants}}
					<div class='card mb-3'>
						<img
							class='card-img-top'
							src='{{this.image}}'
							alt='{{this.name}}'
						/>
						<div class='card-body m-2 p-3'>
							<h6 class='card-title mb-1'>{{{this.name}}}</h6>
							<div class='restaurant-category mb-1'>
								<i class='fas fa-utensils pr-2'></i>
								{{this.category}}
							</div>
							<div>
								<span class='badge badge-pill badge-danger font-weight-normal'>
									{{this.rating}}
									<i class='fas fa-star fa-xs'></i>
								</span>
							</div>
							<div class='mt-2'>
								<button type='button' class='btn btn-primary'><a
										href='/restaurants/{{this._id}}'
										class='text-white'
									>更多</a></button>
								<button type='button' class='btn btn-primary'><a
										href='/restaurants/{{this._id}}/edit'
										class='text-white'
									>編輯</a></button>

								<form
									action='/restaurants/{{this._id}}/delete'
									method='POST'
									class='d-inline'
								>
									<button type='submit' class='btn btn-danger'>刪除</button>
								</form>
							</div>
						</div>
					</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>